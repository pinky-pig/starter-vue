{
  "name": "playground",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3333 --open --host",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "preview-https": "serve dist",
    "test": "vitest",
    "up": "taze major -I",
    "setup": "pnpm install && pnpm add -D @arvinn/eslint-config @arvinn/prettier-config @arvinn/vscode-settings && npx arvinn-vscode-settings"
  },
  "dependencies": {
    "@arvin/maps": "workspace:^",
    "@arvin/materials": "workspace:^",
    "@arvin/utils": "workspace:^",
    "pinia": "^3.0.3"
  },
  "devDependencies": {
    "@arvinn/eslint-config": "^0.0.10",
    "@arvinn/prettier-config": "^0.0.3",
    "@arvinn/vscode-settings": "^0.0.3",
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.8.8",
    "@egoist/tailwindcss-icons": "^1.9.0",
    "@iconify-json/carbon": "^1.2.14",
    "@iconify-json/lucide": "^1.2.71",
    "@iconify/json": "^2.2.400",
    "@tailwindcss/vite": "^4.1.16",
    "@types/archiver": "^6.0.4",
    "@types/clean-css": "^4.2.11",
    "@types/node": "^20.19.23",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^14.0.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "bumpp": "^10.3.1",
    "class-variance-authority": "^0.7.1",
    "clean-css": "^5.3.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "fs": "0.0.1-security",
    "https-localhost": "^4.7.1",
    "jsdom": "^27.0.1",
    "less": "^4.4.2",
    "lint-staged": "^16.2.6",
    "lucide-vue-next": "^0.548.0",
    "pnpm": "^10.19.0",
    "prettier": "^3.6.2",
    "radix-vue": "^1.9.17",
    "rimraf": "^5.0.10",
    "shadcn-vue": "^2.3.2",
    "shiki": "^3.14.0",
    "simple-git": "^3.28.0",
    "simple-git-hooks": "^2.13.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "taze": "^19.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "unplugin-vue-router": "^0.16.0",
    "vite": "^7.1.12",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vite-ssg": "^28.2.2",
    "vite-ssg-sitemap": "^0.10.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "vue-sonner": "^2.0.9",
    "vue-tsc": "^3.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  }
}
